{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2018"],
    "esModuleInterop": true,
    "jsx": "react",
    "declaration": true,
    "module": "CommonJS",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "strictPropertyInitialization": true
  },
  "exclude": ["node_modules", "../**/*.spec.ts", "../**/*.spec.tsx"]
}
